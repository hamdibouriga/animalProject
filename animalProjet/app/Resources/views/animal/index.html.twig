{% extends "::layout/layout.html.twig" %}

{% block body %}
    <center>
        <div class="row">
            <div class="col-md-12">
                <h1 class="page-head-line">Lists Des Animaux </h1>
            </div>
        </div>
    </center>

    <div class="panel panel-default">

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Age</th>
                            <th>Famille</th>
                            <th>Race</th>
                            <th>Nourriture</th>
                            <th>Traitements</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for animal in animals %}
                            <tr>
                                <td><a href="#">{{ animal.id }}</a></td>
                                <td>{{ animal.nom }}</td>
                                <td>{{ animal.age }}</td>
                                <td>{{ animal.famille }}</td>
                                <td>{{ animal.race }}</td>
                                <td>{{ animal.nourriture }}</td>
                                <td>

                                    <button type="button" class="btn btn-info btn-lg">

                                        <a class="glyphicon glyphicon-open" aria-hidden="true" href="{{ path('crudAnimaux_show', { 'id': animal.id }) }}">Afficher</a>
                                    </button>


                                    <button type="button" class="btn btn-alert btn-lg">
                                        <a class="glyphicon glyphicon-pencil" href="{{ path('crudAnimaux_edit', { 'id': animal.id }) }}">Modifier</a>
                                    </button>


                                    <button type="button" class="btn btn-danger btn-lg">
                                        <a class="glyphicon glyphicon-trash" href="{{ path('crudAnimaux_delete', { 'id': animal.id }) }}">Supprimer</a>
                                    </button>

                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- End  Kitchen Sink -->











{% endblock %}
